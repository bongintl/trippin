{% requireAdmin %}
{% extends "_layouts/cp" %}
{% set title = 'Settings' %}
{% set fullPageForm = true %}

{% import "_includes/forms" as forms %}

{% block saveButton %}
	<input type="hidden" name="action" value="plugins/savePluginSettings">
	<input type="hidden" name="pluginClass" value="seo">
	<input type="hidden" name="redirect" value="seo/settings">

	<input type="submit" class="btn submit" value="{{ 'Save'|t }}">
{% endblock %}

{% block content %}
	{% namespace namespace %}
	<div id="tab1">
		{% include "seo/_settings/fieldtype" %}
	</div>
	<div id="tab2" class="hidden">
		{% include "seo/_settings/sitemap" %}
	</div>
	{% endnamespace %}
{% endblock %}